<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.studentmanager.client.ClientController"
      style="-fx-padding: 20px;">

    <Label text="Klient StudentManager" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <TextArea fx:id="messageArea" editable="false" prefHeight="200.0" prefWidth="300.0" wrapText="true"/>

    <TextField fx:id="inputField" promptText="Wpisz wiadomość..."/>

    <Button text="Wyślij do serwera" onAction="#onSendAction"/>

    <Label fx:id="statusLabel" text="Status: Rozłączony" textFill="grey"/>

</VBox>